{
  "manifest_version": 3,
  "name": "Mail Extractor â€“ Float",
  "version": "0.1.0",
  "description": "Floating button to extract current email and send to local backend.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.live.com/*",
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*", "https://outlook.live.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}